# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Task {
  id: ID!
  title: String!
  details: String!
}

type Query {
  tasks: [Task!]
}

input NewTask {
  title: String!
  details: String!
}

type Mutation {
  createTask(input: NewTask!): Task!
}

